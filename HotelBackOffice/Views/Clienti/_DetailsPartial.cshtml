@model HotelBackOffice.Models.Entity.Cliente

<div class="modal-header bg-info text-white">
    <h5 class="modal-title">Dettagli Cliente</h5>
    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
</div>

<div class="modal-body">
    <div class="row">
        <div class="col-md-6">
            <h6 class="text-muted mb-3">Informazioni</h6>
            <p><strong>Nome:</strong> @Model.Nome</p>
            <p><strong>Cognome:</strong> @Model.Cognome</p>
            <p><strong>Email:</strong> <a href="mailto:@Model.Email">@Model.Email</a></p>
            <p><strong>Telefono:</strong> <a href="tel:@Model.Telefono">@Model.Telefono</a></p>
        </div>

        <div class="col-md-6">
            <h6 class="text-muted mb-3">Prenotazioni</h6>
            @if (Model.Prenotazioni != null && Model.Prenotazioni.Any())
            {
                <ul class="list-group">
                    @foreach (var p in Model.Prenotazioni.OrderByDescending(x => x.DataInizio).Take(5))
                    {
                        <li class="list-group-item">
                            <strong>Camera @p.Camera.Numero</strong><br />
                            <small>@p.DataInizio.ToString("dd/MM/yyyy") - @p.DataFine.ToString("dd/MM/yyyy")</small><br />
                            <span class="badge bg-success">@p.Stato</span>
                        </li>
                    }
                </ul>
            }
            else
            {
                <p class="text-muted">Nessuna prenotazione</p>
            }
        </div>
    </div>
</div>

<div class="modal-footer">
    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Chiudi</button>
    @if (User.IsInRole("Amministratore") || User.IsInRole("Receptionist"))
    {
        <button type="button" class="btn btn-warning" onclick="$('#clienteModal').modal('hide'); apriModalModifica(@Model.ClienteId)">
            <i class="bi bi-pencil"></i> Modifica
        </button>
    }
</div>