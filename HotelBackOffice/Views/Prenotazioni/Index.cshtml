@model IEnumerable<HotelBackOffice.Models.Entity.Prenotazione>

@{
    ViewData["Title"] = "Gestione Prenotazioni";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi bi-calendar-check"></i> Gestione Prenotazioni</h2>
        @if (User.IsInRole("Amministratore") || User.IsInRole("Receptionist"))
        {
            <button type="button" class="btn btn-primary" onclick="apriModalCreate()">
                <i class="bi bi-plus-circle"></i> Nuova Prenotazione
            </button>
        }
    </div>

    <div id="alertContainer"></div>

    <div class="card shadow">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>Cliente</th>
                            <th>Camera</th>
                            <th>Check-in</th>
                            <th>Check-out</th>
                            <th>Stato</th>
                            <th class="text-center">Azioni</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Any())
                        {
                            @foreach (var item in Model)
                            {
                                <tr id="prenotazione-@item.PrenotazioneId">
                                    <td>@item.Cliente.Nome @item.Cliente.Cognome</td>
                                    <td><strong>@item.Camera.Numero</strong> - @item.Camera.Tipo</td>
                                    <td>@item.DataInizio.ToString("dd/MM/yyyy")</td>
                                    <td>@item.DataFine.ToString("dd/MM/yyyy")</td>
                                    <td>
                                        <span class="badge bg-@(item.Stato == "Confermata" ? "success" : item.Stato == "Cancellata" ? "danger" : "warning")">
                                            @item.Stato
                                        </span>
                                    </td>
                                    <td class="text-center">
                                        <div class="btn-group" role="group">
                                            <button class="btn btn-sm btn-info" onclick="apriModalDettagli(@item.PrenotazioneId)" title="Dettagli">
                                                <i class="bi bi-eye"></i>
                                            </button>
                                            @if (User.IsInRole("Amministratore") || User.IsInRole("Receptionist"))
                                            {
                                                <button class="btn btn-sm btn-warning" onclick="apriModalModifica(@item.PrenotazioneId)" title="Modifica">
                                                    <i class="bi bi-pencil"></i>
                                                </button>
                                                <button class="btn btn-sm btn-danger" onclick="apriModalElimina(@item.PrenotazioneId)" title="Elimina">
                                                    <i class="bi bi-trash"></i>
                                                </button>
                                            }
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="6" class="text-center text-muted py-4">
                                    Nessuna prenotazione registrata
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="prenotazioneModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content" id="modalContent">
            <!-- Contenuto caricato con AJAX -->
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function mostraAlert(messaggio, tipo) {
            const alert = `
                <div class="alert alert-${tipo} alert-dismissible fade show" role="alert">
                    ${messaggio}
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            `;
            $('#alertContainer').html(alert);

            setTimeout(function() {
                $('.alert').fadeOut();
            }, 5000);
        }

        function apriModalCreate() {
            $.get('/Prenotazioni/GetCreatePartial', function(data) {
                $('#modalContent').html(data);
                $('#prenotazioneModal').modal('show');
            });
        }

        function apriModalDettagli(id) {
            $.get('/Prenotazioni/GetDetailsPartial/' + id, function(data) {
                $('#modalContent').html(data);
                $('#prenotazioneModal').modal('show');
            });
        }

        function apriModalModifica(id) {
            $.get('/Prenotazioni/GetEditPartial/' + id, function(data) {
                $('#modalContent').html(data);
                $('#prenotazioneModal').modal('show');
            });
        }

        function apriModalElimina(id) {
            $.get('/Prenotazioni/GetDeletePartial/' + id, function(data) {
                $('#modalContent').html(data);
                $('#prenotazioneModal').modal('show');
            });
        }

        function inviaForm(form) {
            $.ajax({
                url: $(form).attr('action'),
                type: 'POST',
                data: $(form).serialize(),
                success: function(response) {
                    if (response.success) {
                        $('#prenotazioneModal').modal('hide');
                        mostraAlert(response.message, 'success');
                        setTimeout(function() {
                            location.reload();
                        }, 1000);
                    } else {
                        $('#modalContent').html(response);
                    }
                }
            });
            return false;
        }

        function confermaEliminazione(form) {
            const prenotazioneId = $(form).find('input[name="id"]').val();

            $.ajax({
                url: '/Prenotazioni/DeletePrenotazione/' + prenotazioneId,
                type: 'POST',
                data: $(form).serialize(),
                success: function(response) {
                    if (response.success) {
                        $('#prenotazioneModal').modal('hide');
                        mostraAlert(response.message, 'success');
                        $('#prenotazione-' + prenotazioneId).fadeOut(500, function() {
                            $(this).remove();
                        });
                    } else {
                        mostraAlert(response.message, 'danger');
                    }
                }
            });
            return false;
        }
    </script>
}